#! /bin/sh
total=0
pathsize=`du -s --block-size=1 /home/cemaj/tarora/eecs168/pvjob_mylibrary.nand.icv.drc/run_details | awk '{print $1}'`
total=$(($total+$pathsize))
pathsize=`du -s --block-size=1 /home/cemaj/tarora/eecs168/pvjob_mylibrary.nand.icv.drc/nand.LAYOUT_ERRORS | awk '{print $1}'`
total=$(($total+$pathsize))
echo $total > /home/cemaj/tarora/eecs168/pvjob_mylibrary.nand.icv.drc/run_details/duse_master.tmp && \
mv /home/cemaj/tarora/eecs168/pvjob_mylibrary.nand.icv.drc/run_details/duse_master.tmp /home/cemaj/tarora/eecs168/pvjob_mylibrary.nand.icv.drc/run_details/duse_master
